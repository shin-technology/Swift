import UIKit

var str = "Hello, playground"
var o : Int?
var a : Int8 = Int8.max
var b : Int16 = -11
var c : Int32 = Int32.max
var d : Int64 = 1
var e : UInt = 22
var ee : UInt? = nil
var f : UInt8 = 33
var g : UInt16 = 1
var h : UInt32 = 2
var i : UInt64 = 4444444444444
print("\(o)")
print("\(a)")
print("\(b)")
print("\(c)")
print("\(d)")
print("\(e)")
print("\(f)")
print("\(g)")
print("\(h)")
print("\(i)")

let aaa : Double = 2.22222
let bbb : Float = 3.14159
let bbbbbb : Float? = nil
let bbbccc : Float? = 2.2222

print("\(aaa)")
print("\(bbb)")

let ccc : String = "hello"

print(ccc)

var mybool1 : Bool = true
let mybool2 : Bool? = nil
let mybool3 : Bool? = true
var mybool4 : CVTime?

print(mybool1)
print(mybool2)

var mychar : Character = "a"
print(mychar)

/* Optionals -> 上記の全て + nil */
// Optionals -> はてな


var a = 1 + 1
var b = 1 - 1
var c = 2 * 3
var d = 4 / 2
var e = 5 % 2
var f = 2 < 1 ? 2 : 1

print(a)
print(b)
print(c)
print(d)
print(e)
print(f)

// == 等于，判断用
// != 不等于，判断用
// !  取反，运算用
// = 赋值，运算用
// - 取负，运算用
// += 先加后赋值
// -= 先减后赋值
// *= 先乘后赋值
// /= 先除后赋值
// ... 序列，包含两端的值
// ..< 序列，不包含右边的值
// [] 序列，把各个值列举出来
// () タプル (1，"hello") 括号
// && 逻辑运算，且
//
// ---------开关---------开关----------💡----
//
//
// || 逻辑运算，或
//      ----开关-----
// -----           -----💡----
//      ----开关-----
//
// > 大鱼
// < 小鱼
// >= 大鱼等鱼
// <= 小鱼等鱼

// for 循环

for item in 3...5 {
    print(item)
}

var xulie : [String] = ["a", "b", "c", "d", "hi hao piao liang"]

for item : String in xulie {
    print(item)
}

for item in xulie[1...] {
    print(item)
}

for item in xulie[..<4] {
    print(item)
}

var aaa : String = "aaa"
var bbb : String = "aaa"
print(aaa == bbb)
